<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div>
    <p><%= form.label :commenter %></p>
    <p><%= form.text_field :commenter %></p>
  </div>
  <div>
    <p><%= form.label :body %></p>
    <p><%= form.text_area :body %></p>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>